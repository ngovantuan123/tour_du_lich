
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowGrid</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <script src="~/Content/DateFormat/date.format.js"></script>

</head>
<body>
    <br />
    <div style="width:90%; margin:0 auto;">
        <h2 class="font-weight-bold text-primary">Danh sách khách hàng </h2>
        <a class="btn btn-info" href="/KhachHang/addKhachHang">Thêm mới</a>

        <br />
        <br />


        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>SĐT</th>
                    <th>Ngày Sinh</th>
                    <th>Email</th>
                    <th>CMT</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>


    <script>

        // display date
        function formatStringDate(date) {

            var dateObj = new Date(parseInt(date.substr(6)));
            return dateObj.format("dd/mm/yyyy");
        };

        // display format current VND
        function formatCurrentVND(number) {

            return number.toLocaleString('vi-VN', { currency: 'VND', style: 'currency' });
        }
        $(document).ready(function () {
            // tạo bảng
            $("#demoGrid").DataTable({

                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,


                "ajax": {
                    "url": "/KhachHang/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    //{ className: 'text-right', targets: [0, 1, 2,3, 4] },
                    //{ className: 'text-center', targets: [0,1,2,3,4,5,6,7] }


                ],


                "columns": [
                    { "data": "kh_id", "name": "kh_id", "autoWidth": true },
                    { "data": "kh_ten", "name": "kh_ten", "autoWidth": true },
                    { "data": "kh_sdt", "name": "kh_sdt", "autoWidth": true },
                    {
                        "data": "kh_ngaysinh", "name": "kh_ngaysinh", "autoWidth": true,
                        "render": function (data) { return formatStringDate(data); }
                    },
                    {
                        "data": "kh_email", "name": "kh_email", "autoWidth": true
                    },
                    { "data": "kh_cmnd", "name": "kh_cmnd", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/khachhang/editKhachHang?idKhachhang=' + full.kh_id + '">Chỉnh Sửa</a><a class="btn btn-info" href="/KhachHang/deleteKhachHang?idKhachHang=' + full.kh_id + '">Xóa</a>'; }
                    }
                ]

            });

        });
    </script>
</body>

</html>  