@model DAO.Model.tour_gia

@{
    ViewBag.Title = "Edit";
}
<br />
<h2 class="font-weight-bold text-primary">Sửa giá tour</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.gia_id)

       

        <div class="form-group">
            @Html.LabelFor(model => model.tour_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tour_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tour_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá từ ngày
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.gia_tungay, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gia_tungay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá đến ngày
           <div class="col-md-10">
                @Html.TextBoxFor(model => model.gia_denngay, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gia_denngay, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Giá tiền
            <div class="col-md-10">
                @Html.EditorFor(model => model.gia_sotien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia_sotien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
