<div id="chartcontainer"></div>
<script>

    // display format current VND
    function formatCurrentVND(number) {

        return number.toLocaleString('vi-VN', { currency: 'VND', style: 'currency' });
    }
    $(document).ready(function () {


        // get số tiền 1 năm
        $.ajax({
            url: "/Home/getSoTien1nam",
            type: "POST",
            //data: JSON.stringify(data),
            dataType: "json",
            contentType: "application/json",
            success: function (response) {
                $('#sotien1nam').text(formatCurrentVND(response[0].sotien1nam));

            },
            error: function () {
                console.log('error');
            }
        });
        // get soos luong doan 1 năm
        $.ajax({
            url: "/Home/tongsodoantrongnam",
            type: "POST",
            //data: JSON.stringify(data),
            dataType: "json",
            contentType: "application/json",
            success: function (response) {
                $('#sldoan1nam').text(response[0].sldoan + ' Đoàn');

            },
            error: function () {
                console.log('error');
            }
        });
        $.ajax({
            url: "/Home/tourhoatdongnhieunhat",
            type: "POST",
            //data: JSON.stringify(data),
            dataType: "json",
            contentType: "application/json",
            success: function (response) {
                $('#tour_hdnn').text(response[0].tour_di_nhieu_nhat);

            },
            error: function () {
                console.log('error');
            }
        });
        $.ajax({
            url: "/Home/tourdoanhthucaonhat",
            type: "POST",
            //data: JSON.stringify(data),
            dataType: "json",
            contentType: "application/json",
            success: function (response) {
                $('#tour_dtcn').text(response[0].tour_doanh_thu_cao_nhat);

            },
            error: function () {
                console.log('error');
            }
        });

        $("#chartcontainer").load('@Url.Action("getchart1", "Chart")');

        });
</script>