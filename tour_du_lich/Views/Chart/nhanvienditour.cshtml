

@model DAO.ViewModel.NhanVienDiTourViewModel
@{
    ViewBag.Title = "Thong ke";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Layout = null;
}

<br />

<h2 class="font-weight-bold text-primary">Thống kê nhân viên Tour</h2>
@using (Html.BeginForm())
{
    
<div class="form-horizontal">
    <hr />
    <div class="col-lg-4">
        <div class="form-group">
            <div class="form-row">
                <div class="col"><label class="col-form-label">Từ ngày:</label></div>
                <input id="tn" type="date" name="tn" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col"><label class="col-form-label">Đến ngày:</label></div>
                <input id="dn" type="date" name="dn" />
            </div>
        </div>
        </div>
        <div class="form-group">
            Nhân viên
            <div class="col-md-10">
                @Html.DropDownList("nv_id", (IEnumerable<SelectListItem>)ViewBag.nvList, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xem" class="btn btn-danger" />
            </div>
        </div>
    </div>

    }
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên tour
        </th>


        <th>
            Số lần
        </th>

    </tr>
    @{ var i = 0;}
    @{ var sl = 0;}
    @foreach (var item in Model.kq)
    {
        <tr>
            @{i++;}
            @{sl = sl + item.Value; }
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>

        </tr>

    }
    <tr><td></td><td><div style="float:right"><b>Tổng Cộng:</b></div></td><td>@sl</td></tr>

</table>



    <script>


    </script>
