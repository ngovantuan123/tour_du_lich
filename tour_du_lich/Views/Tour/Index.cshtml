
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   // Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowGrid</title>
    
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <script src="~/Content/DateFormat/date.format.js"></script>
   
</head>
<body>
    <div class="container">
        <br />
        <div style="width:100%; margin:0 auto;">
           
           
            <h2 class="font-weight-bold text-primary">Danh sách Tour</h2>
            @Html.ActionLink("Thêm mới tour", "add",new { }, new { @class = "btn btn-info" })

            <br />
            <br />

           
            <table  id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <thead>
                    <tr>
                        
                        <th>Tên tour</th>
                       

                        <th>Mô tả</th>
                        <th>Loại tour</th>

                        <th>Danh sách các điểm đến</th>

                        <th>Xem giá</th>
                       

                    </tr>
                </thead>
            </table>
        </div>
    </div>


    <script>
        function updateStatus(id) {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("updateStatus", "Todo")',
                data: { todo_id : id },
                success: function (res) {
                    $("body").html(res);
                }
            });

        }

        // display date
        function formatStringDate(date) {
            
            var dateObj = new Date(parseInt(date.substr(6)));
           
            return dateObj.format("dd/mm/yyyy");
            

        };

        // display format current VND
        function formatCurrentVND(number) {
            
            return number.toLocaleString('vi-VN', { currency: 'VND', style: 'currency' });
        }

        $(document).ready(function () {

            
            // tạo bảng
            var t = $("#demoGrid").DataTable({

                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,


                "ajax": {
                    "url": "/Tour/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
               
               
                
                "scrollY": "400px",
                "scrollX": true,
                "scrollCollapse": true,
                "fixedColumns":   {
                    "leftColumns": 1,
                    "rightColumns": 1
                },
               

                "columns": [
                   
                      { "data": "ten_tour", "name": "ten_tour" },
                       { "data": "mota_tour", "name": "mota_tour" },
                       { "data": "loai_tour", "name": "loai_tour"},
                       { "data": "diadiem_tour", "name": "diadiem_tour" },
                       {
                           "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/tour_gia/index?tour_id=' + full.id_tour + '">Xem</a>'; }
                       }
                     
                        /*
                       {
                           "data": "gia.gia_sotien","name": "gia.gia_sotien",
                           "render": function (data) { return formatCurrentVND(data); }
                       },
                        { "data": "diadiem.dd_thanhpho", "name": "diadiem.dd_thanhpho", "autoWidth": true },
                      {
                          "data": "gia.gia_tungay", "name": "gia.gia_tungay",
                          "render": function (data) { return formatStringDate(data); }
                      },
                        { "data": "doankhach.doan_name", "name": "doankhach.doan_name", "autoWidth": true },
                      */
                ]

            });

               

        });
    </script>
</body>

</html>  